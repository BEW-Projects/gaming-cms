{% extends "index.njk" %}

{% block body %}
    <div class="container col-lg-10">
        <div class="card my-5">
            <div class="card-header">
                Registration
            </div>
            <div class="card-body">
                {% block membersNewForm %}
                    <form id="registerForm" onsubmit="event.preventDefault();membersRegister();">
                        <input type="hidden" name="lastIp" value="{{ ip }}">
                        <input id="timezone" type="hidden" name="timezone" value="">
                        <div class="form-group row">
                            <label for="registerFormFirstName" class="col-sm-4 col-form-label">First Name:</label>
                            <div class="col-sm-8">
                                <input type="text" onchange="resetRegisterFields();" id="registerFormFirstName" class="form-control" placeholder="First Name" name="firstName" autocomplete="given-name" required="required">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="registerFormLastName" class="col-sm-4 col-form-label">Last Name:</label>
                            <div class="col-sm-8">
                                <input type="text" onchange="resetRegisterFields();" id="registerFormLastName" class="form-control" placeholder="Last Name" name="lastName" autocomplete="family-name" required="required">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="registerFormScreenName" class="col-sm-4 col-form-label">Screen Name:</label>
                            <div class="col-sm-8">
                                <input type="text" onchange="resetRegisterFields();" id="registerFormScreenName" class="form-control" placeholder="Screen Name" name="screenName" required="required">
                                <div class="invalid-feedback" id="registerFormScreenNameInfo"></div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="registerFormEmail" class="col-sm-4 col-form-label">Email:</label>
                            <div class="col-sm-8">
                                <input type="email" onchange="resetRegisterFields();" id="registerFormEmail" class="form-control" placeholder="Email" name="email" autocomplete="email" required="required">
                                <div class="invalid-feedback" id="registerFormEmailInfo"></div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="registerFormPassword" class="col-sm-4 col-form-label">Password:</label>
                            <div class="col-sm-8">
                                <input type="password" onchange="resetRegisterFields();" id="registerFormPassword" pattern=".{6,}" title="6 characters minimum" class="form-control" placeholder="Password" name="password" autocomplete="new-password" required="required">
                                <div class="invalid-feedback" id="registerFormPasswordInfo"></div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="registerFormConfirmPassword" class="col-sm-4 col-form-label">Confirm Password:</label>
                            <div class="col-sm-8 ">
                                <input
                                    type="password"
                                    onchange="resetRegisterFields();"
                                    id="registerFormConfirmPassword"
                                    pattern=".{6,}"
                                    title="6 characters minimum"
                                    class="form-control"
                                    placeholder="Confirm Password"
                                    name="passwordConfirm"
                                    autocomplete="new-password"
                                    required="required">
                                <div class="invalid-feedback" id="registerFormConfirmPasswordInfo"></div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-12">
                                <button type="submit" class="btn btn-primary float-right px-4">Create</button>
                            </div>
                        </div>
                    </form>
                {% endblock %}
            </div>
        </div>
    </div>
{% endblock %}
