{% extends "index.njk" %}

{% block body %}
    {% if articles | length %}
        <p>Articles: <a href="/articles/new">New</a></p></p>
        {% for article in articles %}
            <a href="/articles?_id={{ article._id }}">{{ article.title }}</a><br>
        {% endfor %}
        {% else %}
            <p>No articles yet! <a href="/articles/new">Create One</a></p>
    {% endif %}
{% endblock %}
